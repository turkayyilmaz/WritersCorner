@model IEnumerable<Author>
@{
    ViewData["Title"] = "Authors";
}
<h2>Author List</h2>
<hr>
<form class="d-flex mb-3" method="get" asp-controller="Home" asp-action="Authors">
    <input type="search" name="search" placeholder="Insert a author name..." value="@ViewBag.Search"
        class="form-control m-1">
    <button type="submit" class="btn bg-zort search-color"><i class="material-symbols-outlined m-1">search</i></button>
</form>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-3">
            <a style="text-decoration: none;" href="/detail/authordetail/@item.AuthorId">
                <div class="card p-3 bg-white"><i class="fa fa-apple"></i>
                    <div class="about-product text-center mt-2"><img src="~/img/authors/@item.AuthorImage"
                            class="img-fluid">
                        <div class="mt-2">

                            <h4>@item.AuthorFullName</h4>
                        </div>
                    </div>
                    <div class="stats mt-2">
                        <div class="d-flex justify-content-between p-price">
                            <span>Country:</span><span>@item.Country.CountryName
                                <img class="img-fluid" src="~/img/countries/@item.Country.CountryImage" width="35px">
                            </span>
                        </div>

                    </div>

                </div>
            </a>
        </div>
    }
</div>
