@model List<Author>
@{
    ViewData["Title"] = "Author";
    Layout = "/Views/Admin/AdminPage.cshtml";
    int count = 0;
}
<h2>Author List</h2>
<hr>
<a asp-controller="Admin" asp-action="CreateAuthor" class="btn btn-outline-dark btn-sm mb-3">Create a Author</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Author Id</th>
            <th scope="col">Author FullName</th>
            <th scope="col">Author Image</th>
            <th scope="col">Author Country</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th scope="row">@count</th>
                <th scope="row">@item.AuthorId</th>
                <td>@item.AuthorFullName</td>
                <td>@item.AuthorImage</td>
                <td>@item.Country.CountryName</td>
                <td><a asp-controller="Admin" asp-action="AuthorUpdate" asp-route-id="@item.AuthorId" class="btn btn-outline-primary">Update</a></td>
                <td><a asp-controller="Admin" asp-action="AuthorDelete" asp-route-id="@item.AuthorId" class="btn btn-outline-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>