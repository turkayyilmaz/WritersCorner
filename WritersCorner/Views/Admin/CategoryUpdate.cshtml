@model Category
@{
    ViewData["Title"] = "CategoryUpdate";
    Layout = "/Views/Admin/AdminPage.cshtml";
}

<h1>Edit Category</h1>
<hr>
<form asp-controller="Admin" asp-action="CategoryUpdate" method="post">
    <input type="hidden" asp-for="CategoryId">
    <div class="mb-3">
        <label asp-for="CategoryName" class="form-label">Category Name</label>
        <input type="text" asp-for="CategoryName" class="form-control">
    </div>
    <button class="btn btn-primary">Update</button>
</form>