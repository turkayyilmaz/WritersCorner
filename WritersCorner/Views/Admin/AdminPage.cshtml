<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WritersCorner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WritersCorner.styles.css" asp-append-version="true" />
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>

<body>

    <div class="container-fluid">
        <div class="row" style="position: absolute; width: 800px; height: 100%;">
            <div class="col-3 bg-zort text-light">
                <ul style=" list-style-type: none;" class="mt-5">
                    <li style="font-size: 20px;">Dashboard</li>
                    <hr>
                    <li><a asp-controller="Admin" asp-action="Author" style="text-decoration: none; color: white;">Author</a></li>
                    <hr>
                    <li><a asp-controller="Admin" asp-action="Book" style="text-decoration: none; color: white;">Book</a></li>
                    <hr>
                    <li><a asp-controller="Admin" asp-action="Category" style="text-decoration: none; color: white;">Category</a></li>
                    <hr>
                    <li><a asp-controller="Admin" asp-action="Country" style="text-decoration: none; color: white;">Country</a></li>
                    <hr>
                </ul>
            </div>
            <div class="col-9" style="">
                <div class="container mt-5" style="position: relative; width: 1500px;">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

</body>

</html>
